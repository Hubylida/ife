extends /layout/main
block main
  main
    section
      canvas#clock(width="600",height="600")
    section
      form.clock-controller
        #time.form-group
          input(type="number",placeholder="小时",step="1",min="0",max="23")
          input(type="number",placeholder="分钟",step="1",min="0",max="59")
          input(type="number",placeholder="秒",step="1",min="0",max="59")
          select#pick-zone
            option(value="") 选择时区
            - for(let i=-11;i<=12;i++)
              - let before="UTC",after=i;
                if i===12
                  - before="UCT+-";
                else if i===0
                  - after='';
                else
                  if i>0
                     - before="UCT+";
                option(value=i)= before+after
        .form-group
          button#set-time(type="button") 设置时间
          button#set-alarm(type="button") 设置闹钟
          button#reset-clock(type="reset") 重置时钟
      section
        h3 闹钟列表
        #alarm-info 暂无闹钟




